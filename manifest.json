{
  "name": "Single Speak",
  "version": "1.0",
  "description": "Chrome extension to replace euphemisms with clear terminology.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Single Speak details"
  },
  "permissions":  [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
  ],
  "manifest_version": 2
}
