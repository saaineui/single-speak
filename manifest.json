{
  "name": "Single Speak",
  "version": "1.0",
  "description": "Replace known euphemisms in news stories and website copy with clear terminology.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Single Speak: how to submit"
  },
  "content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content.js"],
			"run_at": "document_end"
		}
  ],
  "manifest_version": 2
}
